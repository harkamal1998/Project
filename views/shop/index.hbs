<div class="row">
  <div class="col-sm-6 col-md-4 offset-md-4 offset-sm-3">
    <div id="success" class=" mt-3 text-center alert alert-success{{#if noMessage}}d-none{{/if}}">
      {{successMsg}}
    </div>
  </div>
</div>


{{# each products}}
  <div class="row">
  {{# each this}}
 <div class="card  col-sm-6  col-md-4 mt-1 " >
  <img class="card-img-top img mt-1 mx-5" src="{{this.imgpath}}" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title title">{{this.title}}</h5>
    <p class="card-text description">{{this.description}}</p>
     <div class="row ">
       <div class="col">
         <span class="price">Rs.{{this.price}}</span>
       </div>
       <div class="col">
         <a href="/add-to-cart/{{this.id}}" class="btn btn-success mx-2 " role="button">Add to Cart</a>

       </div>
     </div>

  </div>
</div>
      {{/each}}
  </div>
{{/each}}
